<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#CCE6FF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/rv_restore_cloud_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCE6FF"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/rv_restore_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/home_sync_background"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/rv_restorecloud_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restore Cloud"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rv_restore_google_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/home_back_background"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="100" >

                <LinearLayout
                    android:id="@+id/rv_restore_google_layout_inner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/rv_restore_google_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google Drive"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/rv_restore_google_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Restore from Google Drive" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rv_restore_google_layout_inner2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <CheckBox
                        android:id="@+id/rv_cb_google"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_split_color" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rv_restore_dropbox_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/home_back_background"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="100" >

                <LinearLayout
                    android:id="@+id/rv_restore_dropbox_layout_inner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/rv_restore_dropbox_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drop Box"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/rv_restore_dropbox_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Restore from Drop Box" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rv_restore_dropbox_layout_inner2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <CheckBox
                        android:id="@+id/rv_cb_dropbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_split_color" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rv_restore_onedrive_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/home_back_background"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="100" >

                <LinearLayout
                    android:id="@+id/rv_restore_onedrive_layout_inner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/rv_restore_onedrive_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="One Drive"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/rv_restore_onedrive_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Restore from One Drive" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rv_restore_onedrive_layout_inner2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <CheckBox
                        android:id="@+id/rv_cb_onedrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_split_color" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rv_restore_at_local_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCE6FF"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/rv_restore_at_local_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/home_sync_background"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/rv_restore_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restore Local"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rv_restore_local_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/home_back_background"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="100" >

                <Spinner
                    android:id="@+id/rv_spinner_restore_local"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/local_restore_entries"
                    android:prompt="@string/restore_local_prompt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>